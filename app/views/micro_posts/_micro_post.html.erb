<p id='micro_post_<%=micro_post.id %>'>
  <span class='micro_post_timestamp'>
     <%= micro_post.created_at.strftime("%m/%d %l-%M") %>
   </span> 
   <%= micro_post.content %>
   <% if current_user.id == micro_post.user_id %>
   <%= link_to 'Delete', micro_post, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %>
   <% end %>
</p>